<body>


    <!-- ======= Menu Section ======= -->
    <section id="menu" class="menu">
      <div class="container" data-aos="fade-up">

        <div class="section-header">
          <h2>Our Moviebase</h2>
          <p>Check Out Our <span>Awesome Movies</span></p>
        </div>

        <ul class="nav nav-tabs d-flex justify-content-center" data-aos="fade-up" data-aos-delay="200">
          <li class="nav-item">
            <a class="nav-link active show" data-bs-toggle="tab" data-bs-target="#menu-starters">
              <h4>All Movies</h4>
            </a>
          </li><!-- End tab nav item -->

          <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" data-bs-target="#menu-breakfast">
              <h4>G</h4>
            </a><!-- End tab nav item -->

          <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" data-bs-target="#menu-lunch">
              <h4>PG</h4>
            </a>
          </li><!-- End tab nav item -->

          <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" data-bs-target="#menu-dinner">
              <h4>PG-13</h4>
            </a>
          </li><!-- End tab nav item -->

        </ul>

        <div class="tab-content" data-aos="fade-up" data-aos-delay="300">
          <div class="tab-pane fade active show" id="menu-starters">

            <div class="tab-header text-center">
              <p>Movie Collection</p>
              <h3>All Movies</h3>
            </div>

            <div class="row gy-5">
            <% for (let i=0;i < aMovieList.length; i++) { %>               
              <div class="col-lg-4 menu-item">
                <a href="<%= aMovieList[i].img %>" class="glightbox"><img src="<%= aMovieList[i].img %>" class="menu-img img-fluid" alt=""></a>
                <h4><%= aMovieList[i].title %></h4>
                <p class="ingredients">
                    <%= aMovieList[i].rating %>
                </p>
              </div><!-- Menu Item --><% } %>
            </div>
        </div><!-- End Starter Menu Content -->

        <div class="tab-pane fade" id="menu-breakfast">

            <div class="tab-header text-center">
              <p>Movie Collection</p>
              <h3>G</h3>
            </div>

            <div class="row gy-5">
                <% for (let i=0;i < aMovieList.length; i++) { %> 
                    <% if (aMovieList[i].rating == "G") { %>               
                    <div class="col-lg-4 menu-item">
                      <a href="<%= aMovieList[i].img %>" class="glightbox"><img src="<%= aMovieList[i].img %>" class="menu-img img-fluid" alt=""></a>
                      <h4><%= aMovieList[i].title %></h4>
                      <p class="ingredients">
                          <%= aMovieList[i].rating %>
                      </p>
                    </div><!-- Menu Item --><% } %><% } %>

            </div>
        </div><!-- End Breakfast Menu Content -->

        <div class="tab-pane fade" id="menu-lunch">

            <div class="tab-header text-center">
              <p>Movie Collection</p>
              <h3>PG</h3>
            </div>

            <div class="row gy-5">
                <% for (let i=0;i < aMovieList.length; i++) { %> 
                    <% if (aMovieList[i].rating == "PG") { %>               
                    <div class="col-lg-4 menu-item">
                      <a href="<%= aMovieList[i].img %>" class="glightbox"><img src="<%= aMovieList[i].img %>" class="menu-img img-fluid" alt=""></a>
                      <h4><%= aMovieList[i].title %></h4>
                      <p class="ingredients">
                          <%= aMovieList[i].rating %>
                      </p>
                    </div><!-- Menu Item --><% } %><% } %>

            </div>
        </div><!-- End Breakfast Menu Content -->

        <div class="tab-pane fade" id="menu-dinner">

            <div class="tab-header text-center">
              <p>Movie Collection</p>
              <h3>PG-13</h3>
            </div>

            <div class="row gy-5">
                <% for (let i=0;i < aMovieList.length; i++) { %> 
                    <% if (aMovieList[i].rating == "PG-13") { %>               
                    <div class="col-lg-4 menu-item">
                      <a href="<%= aMovieList[i].img %>" class="glightbox"><img src="<%= aMovieList[i].img %>" class="menu-img img-fluid" alt=""></a>
                      <h4><%= aMovieList[i].title %></h4>
                      <p class="ingredients">
                          <%= aMovieList[i].rating %>
                      </p>
                    </div><!-- Menu Item --><% } %><% } %>

            </div>
        </div><!-- End Breakfast Menu Content -->

     </div>
